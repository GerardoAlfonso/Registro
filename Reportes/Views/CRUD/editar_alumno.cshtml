
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">

</head>
<body>

    <section>
        <header>
            <div class="container">
                <div class="title text-center mt-5">
                    <p class="h4">Editar Alumnos</p>
                    <p>CRUD correspondiente para la tabla alumnos.</p>
                    <a href="~/CRUD/alumnos">Alumnos &nbsp;</a>
                    <a href="~/CRUD/grado">Grados</a>
                </div>
            </div>
        </header>
    </section>

    <section>

        <div class="container mt-5">
            @using (Html.BeginForm("editar_alumnoC", "CRUD", FormMethod.Post))
            {
                <div class="form-group">
                    <input type="type" hidden name="id" value="@ViewBag.alumno.alm_id" />

                    <label for="recipient-name" class="col-form-label">Nombre:</label>
                    <input type="text" class="form-control" id="recipient-name" maxlength="100" minlength="10" placeholder="@ViewBag.alumno.alm_nombre" name="nombre" required>

                    <label for="recipient-name" class="col-form-label">Edad:</label>
                    <input type="number" class="form-control" id="recipient-name" max="99" min="12" value="@ViewBag.alumno.alm_edad" name="edad" required>

                    <label for="recipient-name" class="col-form-label">Sexo:</label>
                    <select name="sexo" id="" class="form-control" name="sexo">
                        <option value="Femenino">Femenino</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Otro">Otro</option>
                    </select>

                    <label for="recipient-name" class="col-form-label" >Observaciones:</label>
                    <input type="text" class="form-control" id="recipient-name" maxlength="100" minlength="10" placeholder="@ViewBag.alumno.alm_observacion" name="observaciones">

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <input type="submit" class="btn btn-success" value="Crear registro">
                </div>

            }

            </div>
    </section>





















    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/app.js" charset="utf-8"></script>
</body>
</html>
